<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="afs_wizard_import" model="ir.ui.view">
            <field name="name">afs.wizard.import.form</field>
            <field name="model">afs.wizard.import_export</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import a data file">
                    <label string="Select the file you want to import :" colspan="4"/>
                    <field name="file" colspan="4" nolabel="1" readonly="0" />
                    <group col="4" colspan="4">
                        <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button icon="gtk-ok" name="execute" string="Import" type="object"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="afs_wizard_export" model="ir.ui.view">
            <field name="name">afs.wizard.export.form</field>
            <field name="model">afs.wizard.import_export</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Export a data file">
                    <label string="Where do you want to save the file :" colspan="4"/>
                    <field name="name" invisible="1"/>
                    <field name="file" colspan="4" nolabel="1" filename="name"/>
                    <group col="4" colspan="4">
                        <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button icon="gtk-ok" name="execute" string="Close" type="object"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="afs_action_import" model="ir.actions.act_window">
            <field name="name">Import data from an XML file</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">afs.wizard.import_export</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="afs_wizard_import"/>
            <field name="target">new</field>
            <field name="context">{'type': 'import'}</field>
        </record>

        <record id="afs_action_export" model="ir.actions.act_window">
            <field name="name">Export data to an XML file</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">afs.wizard.import_export</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="afs_wizard_export"/>
            <field name="target">new</field>
            <field name="context">{'type': 'export'}</field>
        </record>

        <menuitem action="afs_action_import"
                  id="menu_afs_import" parent="afs_menu" groups="base.group_extended" />
        <menuitem action="afs_action_export"
                  id="menu_afs_export" parent="afs_menu" groups="base.group_extended" />
    </data>
</openerp>
