<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Category list view -->
        <record id="afs_categories_action" model="ir.actions.act_window">
            <field name="name">Categories</field>
            <field name="res_model">afs.model.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Models list view -->
        <record id="afs_models_action" model="ir.actions.act_window">
            <field name="name">Models</field>
            <field name="res_model">afs.model</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Wizard: Import -->
        <record id="afs_import_action" model="ir.actions.act_window">
            <field name="name">Import</field>
            <field name="res_model">afs.wizard.import_export</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{'import' : True}</field>
        </record>
        
        <!-- Wizard: Export -->
        <record id="afs_export_action" model="ir.actions.act_window">
            <field name="name">Export</field>
            <field name="res_model">afs.wizard.import_export</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{'export' : True}</field>
        </record>

        <!-- Menus -->
        <menuitem id="afs_menu" name="Purchase (Simplified)" parent="account.menu_finance" />
        <menuitem action="afs_categories_action" id="menu_afs_create_category" parent="afs_menu" groups="base.group_extended" />
        <menuitem action="afs_models_action" id="menu_afs_tree_category" parent="afs_menu" groups="base.group_extended" />
        <menuitem id="afs_menu_config" name="Purchase (Simplified) configuration" parent="account.menu_finance_configuration"/>
        <menuitem action="afs_import_action" id="menu_afs_import" groups="base.group_extended" parent="afs_menu_config"/>
        <menuitem action="afs_export_action" id="menu_afs_export" groups="base.group_extended" parent="afs_menu_config"/>
    </data>
</openerp>
